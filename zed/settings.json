{
  "base_keymap": "VSCode",
  "buffer_font_features": {
    "calt": 0
  },
  "buffer_font_family": "Iosevka",
  "ui_font_family": "Inter Display",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "languages": {
    "Python": {
      "language_servers": ["ty", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "buildFlags": ["-tags=mage"]
      }
    },
    "protobuf-language-server": {
      "binary": {
        "path": "buf",
        "arguments": ["beta", "lsp"]
      }
    }
  },
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "nord": true,
    "ruff": true,
    "toml": true,
    "java": true,
    "sql": true,
    "proto": true
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "dark",
    "light": "Nord Light",
    "dark": "Nord Dark"
  }
}
