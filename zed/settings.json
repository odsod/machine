{
  "session": {
    "trust_all_worktrees": true
  },
  "icon_theme": "Zed (Default)",
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "languages": {
    "Python": {
      "language_servers": ["ty", "ruff"],
      "format_on_save": "on",
      "formatter": [
        { "code_action": "source.organizeImports.ruff" },
        { "code_action": "source.fixAll.ruff" },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "buildFlags": ["-tags=mage"]
      }
    },
    "protobuf-language-server": {
      "binary": {
        "path": "buf",
        "arguments": ["lsp", "serve"]
      }
    }
  },
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "nord": true,
    "ruff": true,
    "toml": true,
    "java": true,
    "sql": true,
    "proto": true
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "buffer_font_features": {
    "calt": 0
  },
  "buffer_font_family": "Iosevka SS08",
  "buffer_font_weight": 400,
  "ui_font_family": "Inter Display",
  "ui_font_weight": 400,
  "theme": {
    "mode": "dark",
    "light": "Alabaster",
    "dark": "Nord Dark"
  }
}
